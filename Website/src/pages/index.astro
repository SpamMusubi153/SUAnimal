---
import { getCollection } from 'astro:content';

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent news articles
const projects = (await getCollection('news'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Welcome To A.N.I.MA.L"
					tagline="Where Passion for AI Meets Boundless Creativity"
					
				>
					<div class="homepage-buttons">
						<a href="https://github.com/SpamMusubi153/SUAnimal">
							<button class = "get-started-button">  Get Started</button>
						</a>
						<a href="/SUAnimal/about/">
							<button class = "learn-more-button"> Learn More</button>
						</a>
					</div>
				</Hero>
			</header>
			
			<Skills />
		</div>
			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Join the A.N.I.MA.L Community</h3>
					<p>
						Dive into the world of ethical AI with us! Whether you're new to technology or have prior experience, 
						we welcome all Seattle University students to join. Engage in discussions, workshops, and projects centered around responsible AI and machine learning practices.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							[
								{ title: 'Weekly Meetings', subtext: 'Every Wednesday at 4 PM in Bannan 629' },
								{ title: 'Monthly Meetings', subtext: 'First Wednesday of the month at 4 PM in Bannan 629 ' }
							].map((item) => (
								<li class="mention-card">
									<strong><p>{item.title}</p></strong>
									<div><small class="subtext">{item.subtext}</small></div> {/* Wrapped in a div */}
								</li>
							))
						}
					</Grid>
	
				</div>
				
			</section>
		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Latest News</h3>
					<p>Take a look at the latest news from Animal.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/SUAnimal/news/">
						View All
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>


		</main>

		<ContactCTA />
	</div>
</BaseLayout>

